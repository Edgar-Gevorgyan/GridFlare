<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".RoomsActivity"
    android:background="#99ccff"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="395dp"
            android:layout_height="476dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/rooms_new_scan_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.106"
            android:background="#11ccff">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycleView_rooms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:onClick="newRoom"
            app:layout_constraintBottom_toBottomOf="@+id/rooms_new_scan_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rooms_new_scan_button"
            app:layout_constraintVertical_bias="0.0"/>

        <Button
            android:id="@+id/rooms_historic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:text="@string/historic"
            android:onClick="go_to_historic"
            app:layout_constraintBottom_toBottomOf="@+id/rooms_new_scan_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rooms_new_scan_button"
            app:layout_constraintVertical_bias="0.0"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="#3399ff"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/rooms_new_scan_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:onClick="go_to_global_scan"
            android:text="@string/start_new_global_scan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/rooms_historic_button"
            app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textColor="#3399ff"
            style="?android:attr/buttonBarButtonStyle"/>
</android.support.constraint.ConstraintLayout>