<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout android:id="@+id/d_room_template"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner_medium"
    android:onClick="displayRoomData">

    <TextView
        android:id="@+id/d_room_name"
        style="@style/TextStyle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/d_room_floor"
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="SleepingRoom"/>

    <TextView
        android:id="@+id/d_room_floor"
        style="@style/TextStyle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:text="0"
        android:inputType="number"/>

    <ImageButton
        android:id="@+id/r_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cancel"
        android:background="#00FFFFFF"
        android:onClick="deleteRoom"/>

    <ImageButton
        android:id="@+id/r_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_toLeftOf="@+id/r_8"
        android:layout_marginRight="30dp"
        android:src="@drawable/refresh"
        android:background="#00FFFFFF"/>

</RelativeLayout>

</LinearLayout>