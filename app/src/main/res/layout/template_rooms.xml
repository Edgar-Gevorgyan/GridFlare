<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout android:id="@+id/d_room_template"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/rounded_corner_medium"
    android:onClick="onClickSwitch">

    <HorizontalScrollView
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/d_room_floor_scroll"
        android:layout_marginStart="20sp">
    <TextView
        android:id="@+id/d_room_name"
        style="@style/TextStyle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SleepingRoom"/>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="40sp"
        android:id="@+id/d_room_floor_scroll"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp">
    <TextView
        android:id="@+id/d_room_floor"
        style="@style/TextStyle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/delete_room_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/cancel"
        android:background="#00FFFFFF"
        android:onClick="onClickSwitch"/>

    <ImageButton
        android:id="@+id/r_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleX="1.6"
        android:scaleY="1.6"
        android:layout_toStartOf="@+id/delete_room_btn"
        android:layout_marginEnd="30dp"
        android:visibility="gone"
        android:src="@drawable/refresh"
        android:background="#00FFFFFF"/>

</RelativeLayout>

</LinearLayout>